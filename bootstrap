# cfg-install

git clone --bare git@github.com:webdev-skynet/osx-settings-dotfiles.git $HOME/.myconfig

function cfg {
   /usr/bin/git --git-dir=$HOME/.myconfig/ --work-tree=$HOME $@
}


cfg checkout
if [ $? = 0 ]; then
  echo "Checked out config.";
  else
    echo "Create a backup foleBacking up pre-existing dotfiles.";
		mkdir -p .config-backup
    cfg checkout 2>&1 | egrep "\\s+\\." | awk {'print $1'} | xargs -I{} mv {} .config-backup/{}
fi;
cfg checkout
cfg config status.showUntrackedFiles no
